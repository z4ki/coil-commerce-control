{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "HA SALES MANAGER",
  "version": "0.1.0",
  "identifier": "com.hagroup.sales-manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:8080"
    
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "HA SALES MANAGER",
        "width": 800
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all"
  },
  "plugins": {
    "fs": {
      "scope": ["$APP/*"]
    },
    "shell": {
      "open": true
    }
  }
}
